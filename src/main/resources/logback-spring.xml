<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- ========================================
         콘솔 로그 색상 정의
         ======================================== -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>

    <!-- ========================================
         공통 속성
         ======================================== -->
    <property name="LOG_PATTERN" value="%d{HH:mm:ss.SSS} %clr(%-5level) %clr(%-40.40logger{39}){cyan} : %msg%n"/>
    <property name="LOG_PATTERN_FILE" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %-40.40logger{39} : %msg%n"/>

    <!-- ========================================
         콘솔 Appender (동기 출력)
         ======================================== -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <!-- immediateFlush=true로 버퍼링 없이 즉시 출력 -->
        <immediateFlush>true</immediateFlush>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ========================================
         파일 Appender (선택적) - 최대 7일 보관
         ======================================== -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN_FILE}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ========================================
         클라이언트 로그 (프론트엔드/모바일) - 최대 7일 보관
         ======================================== -->
    <appender name="FILE_FRONTEND" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/frontend.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/frontend.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN_FILE}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender name="FILE_MOBILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/mobile.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/mobile.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN_FILE}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <logger name="app.frontend" level="INFO" additivity="false">
        <appender-ref ref="FILE_FRONTEND"/>
    </logger>
    <logger name="app.mobile" level="INFO" additivity="false">
        <appender-ref ref="FILE_MOBILE"/>
    </logger>

    <!-- ========================================
         개발 환경 (dev) - 콘솔 + 파일(7일)
         ======================================== -->
    <springProfile name="dev">
        <!-- 루트 로거 -->
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>

        <!-- 애플리케이션 로그 -->
        <logger name="com.cinema" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </logger>

        <!-- Spring 로그 -->
        <logger name="org.springframework" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
        <logger name="org.springframework.web" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- Hibernate SQL 로그 -->
        <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
        <logger name="org.hibernate.orm.jdbc.bind" level="TRACE" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- SQL 초기화 로그 -->
        <logger name="org.springframework.jdbc.datasource.init" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
    </springProfile>

    <!-- ========================================
         운영 환경 (prod)
         ======================================== -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>

        <logger name="com.cinema" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </logger>

        <!-- SQL 로그 비활성화 -->
        <logger name="org.hibernate.SQL" level="OFF"/>
        <logger name="org.hibernate.orm.jdbc.bind" level="OFF"/>
    </springProfile>

    <!-- ========================================
         기본 (프로파일 미지정 시)
         ======================================== -->
    <springProfile name="default">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
</configuration>
