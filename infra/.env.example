# ========================================
# Cinema App - 환경 변수 설정 예시
# ========================================
# 이 파일을 복사하여 .env 파일로 사용하세요
# cp .env.example .env

# ----------------------------------------
# MySQL 설정
# ----------------------------------------
MYSQL_ROOT_PASSWORD=your_root_password
MYSQL_DATABASE=cinema
MYSQL_USER=cinema_user
MYSQL_PASSWORD=your_password
MYSQL_PORT=3306

# ----------------------------------------
# Redis 설정
# ----------------------------------------
REDIS_PORT=6379
REDIS_PASSWORD=

# ----------------------------------------
# Nginx 설정
# ----------------------------------------
NGINX_PORT=80
NGINX_SSL_PORT=443

# ----------------------------------------
# Spring Boot 설정
# ----------------------------------------
SPRING_PROFILES_ACTIVE=local
SERVER_PORT=8080

# ----------------------------------------
# JWT 설정
# ----------------------------------------
JWT_SECRET=your_jwt_secret_key_here_base64_encoded
JWT_ACCESS_TOKEN_EXPIRE_TIME=900000
JWT_REFRESH_TOKEN_EXPIRE_TIME=604800000

# ----------------------------------------
# 좌석 HOLD 설정
# ----------------------------------------
SEAT_HOLD_TTL_MINUTES=7
SEAT_MAX_SEATS_PER_USER=4
